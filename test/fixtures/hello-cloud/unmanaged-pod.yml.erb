apiVersion: v1
kind: Pod
metadata:
  name: unmanaged-pod-<%= deployment_id %>
  labels:
    type: unmanaged-pod
    name: unmanaged-pod-<%= deployment_id %>
    app: hello-cloud
spec:
  activeDeadlineSeconds: 20
  restartPolicy: Never
  containers:
    - name: hello-cloud
      image: hello-world:latest
      imagePullPolicy: IfNotPresent
      env:
      - name: CONFIG
        valueFrom:
          configMapKeyRef:
            name: hello-cloud-configmap-data
            key: datapoint2

apiVersion: v1
kind: Service
metadata:
  name: multi-replica
spec:
  ports:
  - port: 80
    name: http
    targetPort: http
  selector:
    name: jobs
    app: fixtures
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: jobs
spec:
  replicas: 2
  revisionHistoryLimit: 1
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 0
      maxUnavailable: 50%
  template:
    metadata:
      labels:
        name: jobs
        app: fixtures
    spec:
      containers:
      - name: app
        image: busybox
        command: ["sleep", "40"]
        env:
        - name: GITHUB_REV
          value: <%= current_sha %>
      terminationGracePeriodSeconds: 30

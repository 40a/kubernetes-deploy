---
apiVersion: <%= cronjob_api_version %>
kind: CronJob
metadata:
  name: <%= name %>
spec:
  schedule: <%= schedule %>
  successfulJobsHistoryLimit: 3
  failedJobsHistoryLimit: 3
  concurrencyPolicy: Forbid
  jobTemplate:
    spec:
      template:
        spec:
          containers:
          - name: <%= name %>
            image: busybox
            imagePullPolicy: IfNotPresent
            args: [ <%= script.map{|a| %Q("#{a}")}.join(", ") %> ]
          restartPolicy: OnFailure
